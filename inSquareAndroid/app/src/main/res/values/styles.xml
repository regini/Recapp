<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Remove the Android default ActionBar -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- Add custom logo -->
        <item name="android:icon">@drawable/white_nsqre_logo</item>
        <!--<item name="colorControlNormal">@color/colorAccentLightest</item>-->
        <!--<item name="colorControlActivated">@color/colorAccentLightest</item>-->
        <!--<item name="colorControlHighlight">@color/colorAccentLightest</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColor">@color/white</item>
        <item name="android:icon">@drawable/white_nsqre_logo</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FacebookLoginButton">
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/rounded_fb_button</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <!--<item name="android:drawableLeft">@null</item>-->
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="GoogleLoginButton">
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/rounded_google_button</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="StandardRoundButton">
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/rounded_standard_button</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
