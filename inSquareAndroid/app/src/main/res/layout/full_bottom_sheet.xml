<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:fitsSystemWindows="true"
    app:behavior_hideable="false"
    app:behavior_peekHeight="61dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    >

    <!-- Parte visibile del bottom sheet -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- Ombra che divide il layout -->
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/drop_shadow"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/input_margin_side"
            android:paddingStart="@dimen/input_margin_side"
            android:paddingRight="@dimen/input_margin_side"
            android:paddingEnd="@dimen/input_margin_side"
            android:orientation="horizontal"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/bottom_sheet_square_name"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Seleziona un posto"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:fontFamily="sans-serif-condensed-light"
                android:ellipsize="end"
                android:maxLines="1"
                />

            <View
                android:id="@+id/bottom_sheet_separator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/input_margin_side"
                />

            <ImageButton
                android:id="@+id/bottom_sheet_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/input_margin_side"
                android:layout_gravity="center_vertical"
                android:background="@drawable/heart_border_black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a wonderful text!"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>