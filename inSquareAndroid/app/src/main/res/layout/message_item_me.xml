<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/bubble_vertical_margin"
    android:paddingLeft="@dimen/big_vertical_margin"
    >

    <RelativeLayout
        android:id="@+id/message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_b"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/bubble_vertical_margin"
        android:paddingBottom="@dimen/bubble_vertical_margin"
        android:paddingRight="@dimen/bubble_big_margin"
        android:paddingLeft="@dimen/bubble_horizontal_margin"
        >

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/bubble_min_width"
            android:textSize="18sp"
            android:text="MyText is beautiful"
            android:textIsSelectable="true"
            android:fontFamily="sans-serif-condensed"
            android:autoLink="web"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/url_preview"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/message_content">
            <View
                android:id="@+id/url_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/accent"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/url_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_below="@+id/url_line"
                android:text="provider"
                android:visibility="gone"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/blue_button"/>
            <TextView
                android:id="@+id/url_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/url_provider"
                android:text="Url title"
                android:textStyle="bold"
                android:visibility="gone"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/url_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/url_title"
                android:fontFamily="sans-serif-condensed"
                android:text="Url description"
                android:visibility="gone"
                android:maxLines="8"
                android:ellipsize="end"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/url_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/url_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/message_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/url_preview"
            android:layout_alignRight="@+id/message_content"
            android:layout_alignEnd="@+id/message_content"
            android:text="Time Text"
            android:textSize="12sp"
            android:fontFamily="sans-serif-condensed-light"
            />
        <ImageView
            android:id="@+id/message_outgoing_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_below="@+id/message_content"
            android:layout_alignRight="@+id/message_timestamp"
            android:layout_alignEnd="@+id/message_timestamp"
            android:src="@drawable/ic_schedule_black_48dp"
            android:paddingTop="2dp"
            android:layout_alignBottom="@+id/message_timestamp"
            android:tint="@color/primary"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>