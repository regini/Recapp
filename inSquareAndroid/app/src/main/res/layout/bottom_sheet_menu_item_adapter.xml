<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:clickable="true"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/bottom_sheet_menu_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/search_bar_margin"
        android:layout_marginEnd="@dimen/search_bar_margin"
        app:srcCompat="@drawable/ic_mode_edit_black_48dp"
        android:tint="@color/md_grey_600"
        />

    <TextView
        android:id="@+id/bottom_sheet_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/search_bar_margin"
        android:layout_marginStart="@dimen/search_bar_margin"
        android:text="@string/bottomsheet_adapter_menu"
        android:gravity="center_vertical"
        android:textColor="@color/colorTextPrimary" />

</LinearLayout>