<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_map_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nsqre.insquare.Fragments.MapFragment">

    <RelativeLayout
        android:id="@+id/map_fragment_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/slider_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_lower_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:content="@+id/content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/square_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:fontFamily="sans-serif-condensed-light"
                android:text="@string/square_placeholder"
                android:textSize="20sp"
                />

        </LinearLayout>

        <fragment
            android:id="@+id/map_fragment"
            android:name="com.nsqre.insquare.Fragments.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/slider_ll"
            tools:layout="@layout/fragment_map" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/map_fab"
            android:layout_width="@dimen/input_bar_height"
            android:layout_height="@dimen/input_bar_height"
            android:layout_marginRight="@dimen/input_margin_side"
            android:layout_marginBottom="@dimen/button_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/message_processing"
            />
    </RelativeLayout>
</FrameLayout>
