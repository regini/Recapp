<android.support.percent.PercentRelativeLayout
    android:id="@+id/rootFirstPage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    tools:background="@color/md_blue_700"
    tools:context=".Activities.TutorialActivity"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/longpress_md"
        android:layout_centerHorizontal="true"

        app:layout_widthPercent="65%"
        app:layout_heightPercent="45%"
        app:layout_marginTopPercent="5%"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/tutorial_title3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        app:layout_marginBottomPercent="42%"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/tutorial_caption3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/caption_text_size"
        android:fontFamily="sans-serif-condensed-light"
        app:layout_marginBottomPercent="11%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginStartPercent="10%"
        app:layout_marginRightPercent="10%"
        app:layout_marginEndPercent="10%"

        />
</android.support.percent.PercentRelativeLayout>