<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_profile_lower_section_expanded"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/search_bar_margin"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/search_bar_margin"
                android:layout_marginStart="@dimen/search_bar_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                >

                <ImageView
                    android:id="@+id/lower_section_image_eye"
                    android:layout_width="@dimen/mini_fab_size"
                    android:layout_height="@dimen/mini_fab_size"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/eye"
                    android:padding="8dp"
                    />
                <TextView
                    android:id="@+id/lower_section_square_views"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="120"
                    android:fontFamily="sans-serif-condensed-light"
                    />

            </LinearLayout>


            <Button
                android:id="@+id/lower_section_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:text="EDIT"
                android:textColor="@color/md_grey_600"
                style="?attr/borderlessButtonStyle"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>