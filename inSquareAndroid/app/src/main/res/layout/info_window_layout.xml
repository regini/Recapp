<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:id="@+id/info_window_top_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/info_window_background"
        android:padding="@dimen/info_window_padding"
        >

        <LinearLayout
            android:id="@+id/info_window_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/info_window_square_initials"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_marginRight="@dimen/info_window_padding"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="SN"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/linear_layout_rounded_background"
                android:backgroundTint="@color/colorAccent"
                />

            <LinearLayout
                android:id="@+id/info_window_name_activity_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/info_window_padding"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/info_window_square_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Square Name"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="17sp"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    />

                <TextView
                    android:id="@+id/info_window_square_last_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ultima attivitÃ "
                    android:textSize="12sp"
                    android:textColor="@color/colorTextSecondary"
                    android:fontFamily="sans-serif-condensed-light"
                    />

                <LinearLayout
                    android:id="@+id/info_window_facebook_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/info_window_padding"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/activity_vertical_margin"
                        android:layout_height="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/info_window_padding"
                        android:src="@drawable/thumb_up"
                        android:tint="@color/colorTextPrimary"
                        />

                    <TextView
                        android:id="@+id/info_window_like_number"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1234"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-condensed-light"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/info_window_facebook_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/info_window_padding"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/activity_vertical_margin"
                        android:layout_height="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/info_window_padding"
                        android:src="@drawable/clock"
                        android:tint="@color/colorTextPrimary"
                        />

                    <TextView
                        android:id="@+id/info_window_time_text"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sat 24 at 19:30"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-condensed-light"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/info_window_bottom_section"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
    />


</LinearLayout>