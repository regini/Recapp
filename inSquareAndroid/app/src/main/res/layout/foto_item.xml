<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:layout_margin="@dimen/bubble_vertical_margin"
    android:paddingRight="@dimen/big_vertical_margin"
    >

    <RelativeLayout
        android:id="@+id/message_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_a"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/bubble_vertical_margin"
        android:paddingBottom="@dimen/bubble_vertical_margin"
        android:paddingRight="@dimen/bubble_horizontal_margin"
        android:paddingLeft="@dimen/bubble_big_margin"
        >
        <TextView
            android:id="@+id/message_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photo_item_text"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15sp"
            android:gravity="start"
            />
        <ImageView
            android:id="@+id/foto_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_sender"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_photo_library_black"/>
        <TextView
            android:id="@+id/message_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foto_content"
            android:layout_alignRight="@+id/foto_content"
            android:layout_alignEnd="@+id/foto_content"
            android:gravity="bottom"
            android:text="@string/photo_item_time"
            android:textSize="12sp"
            android:fontFamily="sans-serif-condensed-light"
            />
        </RelativeLayout>
</RelativeLayout>